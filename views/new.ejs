<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <div class="container"><h1 align="center">Create a new Campground</h1></div>
        
        <div style="width:30%; margin:30px auto; align-content:center">
             <form action="/campgrounds" method="POST">
                <div class="form-group">
                <input class="form-control" type="text" placeholder="name" name="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price according to per Night" name="price" min="100" step="10">
                    </div>
                <div class="form-group">
                <input class="form-control" type="text" placeholder="Image url" name="image" required>
                </div>
                <div class="form-group">
                <textarea class="form-control" type="text" placeholder="Description" name="description"></textarea>
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-primary">SUBMIT</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>