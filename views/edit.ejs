<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <div class="container"><h1 align="center">Edit <%= Campground.name %></h1></div>
        
        <div style="width:30%; margin:30px auto; align-content:center">
             <form action="/campgrounds/<%=Campground.id%>?_method=PUT" method="POST">
                <div class="form-group">
                <input class="form-control" type="text" value="<%=Campground.name%>" name="Campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%=Campground.price%>" name="Campground[price]" min="100" step="100">
                    </div>
                <div class="form-group">
                <input class="form-control" type="text" value="<%=Campground.image %>"" name="Campground[image]">
                </div>
                <div class="form-group">
                <textarea class="form-control"  type="text" name="Campground[description]"><%= Campground.description%></textarea>
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>